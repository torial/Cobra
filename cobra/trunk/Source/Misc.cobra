# TODO: Share the ProblemAction and WarningAction between Compiler and CobraParser

enum ErrorActionEnum  # TODO: Rename to ErrorAction
	Exit
	Record

enum WarningActionEnum
	Print
	Throw


class CobraWarning
	inherits SystemException

	var _fileName as String?
	var _token as IToken?
	var _msg as String

	def init(fileName as String?, token as IToken?, msg as String)
		base.init()
		_fileName = fileName
		_token = token
		_msg = msg

	def init(token as IToken, msg as String)
		base.init()
		_token = token
		_msg = msg

	get message as String is override
		if _token
			return '[_token.fileName]([_token.lineNum],[_token.colNum]): warning: [_msg]'
		else
			return '[_fileName](1, 1): warning: [_msg]'
